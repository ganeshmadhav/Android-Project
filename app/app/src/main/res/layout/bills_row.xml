<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/gradient">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bills_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:id="@+id/bills_creationdate"
        android:textColor="@color/colorBlack"
        android:paddingBottom="20dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/bills_title"
        android:paddingTop="50dp"
        android:layout_alignLeft="@+id/billsID"
        android:layout_alignStart="@+id/billsID"
        android:layout_width="320dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/billsID"
        android:textStyle="normal|bold"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:srcCompat="@mipmap/ic_rightarrow"
        android:layout_alignTop="@+id/billsID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/imageView4" />

</RelativeLayout>