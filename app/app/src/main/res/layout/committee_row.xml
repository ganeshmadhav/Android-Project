<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/gradient">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comId"
        android:layout_alignLeft="@+id/comId"
        android:layout_alignStart="@+id/comId"
        android:layout_marginTop="14dp"
        android:id="@+id/comName"
        android:textColor="@color/colorDarkGrey"
        android:layout_toStartOf="@+id/imageView5"
        android:layout_toLeftOf="@+id/imageView5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/comChamber"
        android:layout_below="@+id/comName"
        android:layout_alignLeft="@+id/comName"
        android:layout_alignStart="@+id/comName"
        android:paddingBottom="20dp"
        android:textColor="@color/colorDarkGrey"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="17dp"
        android:id="@+id/comId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorDarkGrey"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@mipmap/ic_rightarrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:id="@+id/imageView5"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/comId"
        android:layout_above="@+id/comName" />
</RelativeLayout>