<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_legislator_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.csci571.homework9.LegislatorDetail">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:backgroundTint="@color/colorDarkGrey"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_legislator"
            android:layout_width="match_parent"
            tools:context="com.example.csci571.homework9.LegislatorDetail"
            android:layout_height="800dp">


            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@mipmap/ic_web"
                android:id="@+id/webbt"
                android:layout_alignTop="@+id/twitter"
                android:layout_toRightOf="@+id/twitter"
                android:layout_toEndOf="@+id/twitter"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:background="@android:color/transparent" />

            <ImageButton
                android:layout_height="40dp"
                app:srcCompat="@mipmap/ic_fb"
                android:layout_marginTop="40dp"
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/twitter"
                android:layout_toStartOf="@+id/twitter"
                android:layout_marginRight="18dp"
                android:layout_marginEnd="18dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@mipmap/ic_twitter"
                android:id="@+id/twitter"
                android:layout_alignTop="@+id/facebook"
                android:layout_toRightOf="@+id/legislatorphoto"
                android:layout_toEndOf="@+id/legislatorphoto"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="100dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginTop="26dp"
                android:id="@+id/legislatorphoto"
                android:layout_height="100dp"
                android:layout_below="@+id/facebook"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_id"
                android:autoLink="web|email"
                android:textColorLink="@color/colorDarkGrey"
                android:gravity="right"
                android:textSize="18dp"
                android:textColor="@color/colorLightGrey"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignLeft="@+id/facebook"
                android:layout_alignStart="@+id/facebook"
                android:layout_alignRight="@+id/full_name"
                android:layout_alignEnd="@+id/full_name" />

            <TextView
                android:text="TextView"
                android:layout_height="wrap_content"
                android:id="@+id/full_name"
                android:gravity="right"
                android:textSize="18dp"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/facebook"
                android:layout_width="120dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chambr_id"
                android:gravity="right"
                android:textSize="18dp"
                android:layout_alignBaseline="@+id/Chamber"
                android:layout_alignBottom="@+id/Chamber"
                android:layout_toRightOf="@+id/facebook"
                android:layout_alignRight="@+id/email_id"
                android:layout_alignEnd="@+id/email_id" />

            <TextView
                android:text="Chamber:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Chamber"
                android:textSize="18dp"
                android:layout_marginTop="37dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp" />

            <TextView
                android:text="Contact:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="18dp"
                android:layout_marginTop="38dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/Chamber"
                android:layout_alignLeft="@+id/Chamber"
                android:layout_alignStart="@+id/Chamber" />

            <TextView
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="18dp"
                android:layout_marginTop="42dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/Chamber"
                android:layout_alignStart="@+id/Chamber" />

            <TextView
                android:text="Name: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_marginTop="51dp"
                android:layout_below="@+id/legislatorphoto"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8" />

            <TextView
                android:text="Start Term:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12" />

            <TextView
                android:text="End Term:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_alignTop="@+id/textView13"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_marginTop="50dp" />
            <TextView
                android:text="Term:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_alignTop="@+id/textView14"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:layout_marginTop="50dp" />
            <TextView
                android:text="Office:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_alignTop="@+id/textView15"
                android:layout_alignLeft="@+id/textView15"
                android:layout_alignStart="@+id/textView15"
                android:layout_marginTop="30dp" />
            <TextView
                android:text="State:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_alignTop="@+id/textView16"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_marginTop="50dp" />
            <TextView
                android:text="Fax:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_alignTop="@+id/textView17"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:layout_marginTop="50dp" />
            <TextView
                android:text="Birthday:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_alignTop="@+id/textView18"
                android:layout_alignLeft="@+id/textView18"
                android:layout_alignStart="@+id/textView18"
                android:layout_marginTop="50dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView12"
                android:id="@+id/contact_id"
                android:textSize="18dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/facebook"
                android:layout_alignRight="@+id/chambr_id"
                android:layout_alignEnd="@+id/chambr_id" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/contact_id"
                android:layout_marginTop="50dp"
                android:gravity="right"
                android:textSize="18dp"
                android:id="@+id/startterm_id"
                android:layout_toRightOf="@+id/facebook"
                android:layout_alignRight="@+id/contact_id"
                android:layout_alignEnd="@+id/contact_id" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/startterm_id"
                android:layout_marginTop="50dp"
                android:textSize="18dp"
                android:id="@+id/endterm_id"
                android:gravity="right"
                android:layout_toRightOf="@+id/facebook"
                android:layout_alignRight="@+id/startterm_id"
                android:layout_alignEnd="@+id/startterm_id" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/endterm_id"
                android:layout_marginTop="50dp"
                android:max="100"
                android:progress="67"
                android:id="@+id/progressBar"
                android:layout_toRightOf="@+id/facebook"
                android:layout_alignRight="@+id/endterm_id"
                android:layout_alignEnd="@+id/endterm_id" />
            <TextView
                android:id="@+id/myTextProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hi"
                android:layout_alignLeft="@id/progressBar" android:layout_alignTop="@id/progressBar"
                android:layout_alignBottom="@id/progressBar"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_alignRight="@id/progressBar" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/progressBar"
                android:layout_marginTop="30dp"
                android:gravity="right"
                android:id="@+id/office_id"
                android:textSize="18dp"
                android:layout_alignLeft="@+id/facebook"
                android:layout_alignStart="@+id/facebook"
                android:layout_alignRight="@+id/progressBar"
                android:layout_alignEnd="@+id/progressBar" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/office_id"
                android:layout_marginTop="50dp"
                android:id="@+id/state_id"
                android:gravity="right"
                android:layout_toRightOf="@+id/facebook"
                android:layout_alignRight="@+id/office_id"
                android:layout_alignEnd="@+id/office_id" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/state_id"
                android:layout_marginTop="50dp"
                android:textSize="18dp"
                android:id="@+id/fx_id"
                android:gravity="right"
                android:layout_toRightOf="@+id/facebook"
                android:layout_alignRight="@+id/state_id"
                android:layout_alignEnd="@+id/state_id" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/fx_id"
                android:layout_marginTop="50dp"
                android:textSize="18dp"
                android:gravity="right"
                android:id="@+id/birthday_id"
                android:layout_toRightOf="@+id/facebook"
                android:layout_alignRight="@+id/fx_id"
                android:layout_alignEnd="@+id/fx_id" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:id="@+id/party_id"
                android:layout_alignBottom="@+id/party_icon"
                android:layout_alignRight="@+id/legislatorphoto"
                android:layout_alignEnd="@+id/legislatorphoto" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                app:srcCompat="@drawable/ic_menu_send"
                android:id="@+id/party_icon"
                android:layout_below="@+id/legislatorphoto"
                android:layout_toLeftOf="@+id/party_id"
                android:layout_toStartOf="@+id/party_id" />

            <ImageButton
                app:srcCompat="@drawable/ic_star_nofill"
                android:id="@+id/favoriteleg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:layout_above="@+id/legislatorphoto"
                android:layout_alignRight="@+id/party_icon"
                android:layout_alignEnd="@+id/party_icon" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

