<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/gradient">

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageView2"
        android:layout_width="50dp" />

    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LgState"
        android:layout_toRightOf="@+id/LgState"
        android:id="@+id/textView5" />

    <TextView
        android:text="District"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LgDistrict"
        android:layout_below="@+id/LgName"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="(R)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LgParty"
        android:layout_alignBaseline="@+id/LgState"
        android:layout_alignBottom="@+id/LgState"
        android:layout_alignLeft="@+id/LgName"
        android:layout_alignStart="@+id/LgName" />

    <TextView
        android:text="State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LgState"
        android:layout_alignBaseline="@+id/LgDistrict"
        android:layout_alignBottom="@+id/LgDistrict"
        android:layout_toRightOf="@+id/LgParty"
        android:layout_toEndOf="@+id/LgParty" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_rightarrow"
        android:id="@+id/imageView3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Default Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/LgName"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

</RelativeLayout>