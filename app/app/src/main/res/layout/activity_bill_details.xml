<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bill_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.csci571.homework9.BillDetails">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:backgroundTint="@color/colorDarkGrey"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <TextView
                android:text="BillID:"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="91dp"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Title:"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="28dp"
                android:id="@+id/textView6" />

            <TextView
                android:text="Sponsor:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_marginTop="28dp"
                android:id="@+id/textView8" />

            <TextView
                android:text="Chamber:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_marginTop="28dp"
                android:id="@+id/textView9" />

            <TextView
                android:text="Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="28dp"
                android:id="@+id/textView10" />

            <TextView
                android:text="Introduced on:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_marginTop="28dp"
                android:id="@+id/textView11" />

            <TextView
                android:text="Congress URL:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:layout_marginTop="28dp"
                android:id="@+id/textView12" />

            <TextView
                android:text="Version Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginTop="58dp"
                android:id="@+id/textView13" />
            <TextView
                android:text="Bill URL:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_marginTop="28dp"
                android:id="@+id/textView14" />

            <TextView
                android:text="TextView"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="28dp"
                android:layout_marginEnd="28dp"
                android:id="@+id/billdt_id"
                android:layout_width="100dp" />

            <TextView
                android:text="TextView"
                android:gravity="right"
                android:id="@+id/title_id"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignRight="@+id/billdt_id"
                android:layout_alignEnd="@+id/billdt_id"
                android:layout_width="250dp" />

            <TextView
                android:text="TextView"
                android:id="@+id/bill_type"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignRight="@+id/title_id"
                android:layout_alignEnd="@+id/title_id"
                android:layout_alignLeft="@+id/billdt_id"
                android:layout_alignStart="@+id/billdt_id" />
            <TextView
                android:text="TextView"
                android:id="@+id/sponsor_id"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignRight="@+id/title_id"
                android:layout_alignEnd="@+id/title_id"
                android:layout_alignLeft="@+id/billdt_id"
                android:layout_alignStart="@+id/billdt_id" />
            <TextView
                android:text="TextView"
                android:id="@+id/chamber_id"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignRight="@+id/title_id"
                android:layout_alignEnd="@+id/title_id"
                android:layout_alignLeft="@+id/billdt_id"
                android:layout_alignStart="@+id/billdt_id" />
            <TextView
                android:text="TextView"
                android:id="@+id/Status_id"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/textView10"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignRight="@+id/title_id"
                android:layout_alignEnd="@+id/title_id"
                android:layout_alignLeft="@+id/billdt_id"
                android:layout_alignStart="@+id/billdt_id" />

            <TextView
                android:text="TextView"
                android:id="@+id/introducedOn_id"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignRight="@+id/title_id"
                android:layout_alignEnd="@+id/title_id"
                android:layout_alignLeft="@+id/billdt_id"
                android:layout_alignStart="@+id/billdt_id" />
            <TextView
                android:text="TextView"
                android:id="@+id/congress_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:autoLink="web"
                android:textColorLink="@color/colorDarkGrey"
                android:layout_alignBaseline="@+id/textView12"
                android:layout_alignBottom="@+id/textView12"
                android:layout_alignRight="@+id/title_id"
                android:layout_alignEnd="@+id/title_id"
                android:layout_alignLeft="@+id/billdt_id"
                android:layout_alignStart="@+id/billdt_id" />
            <TextView
                android:text="TextView"
                android:id="@+id/version_id"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignRight="@+id/title_id"
                android:layout_alignEnd="@+id/title_id"
                android:layout_alignLeft="@+id/billdt_id"
                android:layout_alignStart="@+id/billdt_id" />
            <TextView
                android:text="TextView"
                android:id="@+id/bill_url_id"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:autoLink="web"
                android:textColorLink="@color/colorDarkGrey"
                android:layout_alignBaseline="@+id/textView14"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignRight="@+id/title_id"
                android:layout_alignEnd="@+id/title_id"
                android:layout_alignLeft="@+id/billdt_id"
                android:layout_alignStart="@+id/billdt_id" />

            <TextView
                android:text="Bill Type:"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:layout_marginTop="135dp"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_star_nofill"
                android:layout_above="@+id/billdt_id"
                android:layout_alignRight="@+id/billdt_id"
                android:layout_alignEnd="@+id/billdt_id"
                android:layout_marginBottom="15dp"
                android:id="@+id/bill_star"
                android:background="@android:color/transparent" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
